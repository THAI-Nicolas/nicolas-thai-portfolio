---
export interface Props {
  href: string;
  variant?: "primary" | "secondary";
  text: string;
}

const { href, variant = "primary", text } = Astro.props;

const variantClasses = {
  primary:
    "bg-white/90 backdrop-blur-sm border-4 border-light-blue hover:bg-white",
  secondary: "bg-transparent border-4 border-white hover:bg-transparent",
};

const textClasses = {
  primary: "text-text-gray group-hover:text-dark-blue",
  secondary: "text-white",
};
---

<a
  href={href}
  class={`group relative px-14 lg:px-32 py-5 lg:py-10 rounded-full shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl active:scale-95 overflow-hidden ${variantClasses[variant]}`}
>
  {
    variant === "primary" && (
      <div class="absolute inset-0 bg-light-blue transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500 ease-out rounded-full" />
    )
  }

  {
    variant === "secondary" && (
      <div class="absolute inset-0 rounded-full bg-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
    )
  }

  <span class={`h2 font-bold relative z-10 ${textClasses[variant]}`}>
    {text}
  </span>
</a>
