---
export interface Props {
  categorie: string;
  technologies: Array<{
    nom: string;
    logo: string;
  }>;
}

const { categorie, technologies } = Astro.props;
---

<div
  class="flex flex-col p-2 px-3 border border-[var(--color-light-blue)] rounded-md bg-transparent gap-1.5 font-raleway w-full"
>
  <h3
    class="text-xs font-bold text-[var(--color-light-blue)] m-0 tracking-wide uppercase text-center"
  >
    {categorie}
  </h3>

  <div class="flex items-center justify-center gap-2">
    {
      technologies.map((tech) => (
        <div class="flex flex-col items-center gap-1">
          <div class="w-6 h-6 flex items-center justify-center">
            <img
              src={tech.logo}
              alt={tech.nom}
              class="w-full h-full object-contain"
            />
          </div>
          <p class="text-[0.5rem] font-medium text-black m-0 text-center whitespace-nowrap leading-tight">
            {tech.nom}
          </p>
        </div>
      ))
    }
  </div>
</div>
