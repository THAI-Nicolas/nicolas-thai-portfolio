---
/**
 * HomeboardingOverlay - Écran d'accueil style Wii pour la première visite
 * 
 * Affiche un message de bienvenue avec le style visuel de la console Wii
 * S'affiche uniquement lors de la première visite (gestion via localStorage)
 */
import mouseIcon from '../../assets/icones/mouse-icon.svg';
---

<div
  class="homeboarding-overlay fixed inset-0 z-[9999] bg-black flex items-center justify-center opacity-0 pointer-events-none"
  id="homeboarding-overlay"
>
  <div class="homeboarding-content text-center px-[clamp(1rem,4vw,2rem)] max-w-6xl opacity-0">
    <!-- Header avec icône d'avertissement -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-[clamp(1rem,3vw,1.5rem)] mb-[clamp(2rem,8vw,4rem)]">
      <!-- Icône triangle d'avertissement -->
      <svg
        class="warning-icon w-[clamp(3rem,min(6vw,8vh),5.5rem)] h-[clamp(3rem,min(6vw,8vh),5.5rem)]"
        viewBox="0 0 118 118"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M59 8L111.301 103H6.69873L59 8Z"
          fill="#FFD700"
          stroke="black"
          stroke-width="2"
        />
        <rect
          x="54"
          y="35"
          width="10"
          height="30"
          rx="1.25"
          fill="black"
        />
        <rect
          x="54"
          y="75"
          width="10"
          height="10"
          fill="black"
        />
      </svg>
      
      <!-- Titre -->
      <h1 class="wii-title text-[clamp(1.25rem,min(3.5vw,5vh),3rem)] font-bold text-white uppercase tracking-wider">
        This is a Developer Portfolio
      </h1>
    </div>

    <!-- Texte principal -->
    <div class="main-text text-[clamp(1rem,min(2.5vw,3.5vh),2.25rem)] uppercase font-semibold text-white leading-relaxed mb-[clamp(3rem,10vw,5rem)]">
      <p class="mb-2">Before continuing, get ready to explore</p>
      <p class="mb-2">my projects, skills and achievements.</p>
      <p class="mb-2">beware, hiring me might</p>
      <p class="mb-0">boost your sales.</p>
    </div>

    <!-- Portfolio URL -->
    <div class="portfolio-url mb-[clamp(2.5rem,8vw,4rem)]">
      <p class="text-[clamp(0.9375rem,min(1.8vw,2.8vh),1.875rem)] font-semibold text-white mb-2">Portfolio available at</p>
      <p class="text-[clamp(0.9375rem,min(1.8vw,2.8vh),1.875rem)] font-medium text-[#5d81b8]">
        https://nicolas-thai.fr
      </p>
    </div>

    <!-- Press Mouse Click -->
    <div class="press-button-container flex items-center justify-center gap-4">
      <span class="text-[clamp(1rem,min(2.5vw,3.5vh),2.5rem)] font-semibold uppercase text-white press-text-blink">Press</span>
      
      <!-- Icône de souris qui clique -->
      <button
        id="homeboarding-continue-btn"
        class="mouse-button relative w-[clamp(3rem,min(5vw,7vh),4.375rem)] h-[clamp(3rem,min(5vw,7vh),4.375rem)] flex items-center justify-center press-text-blink transition-transform duration-200 hover:scale-110 active:scale-95 focus-visible:outline-[3px] focus-visible:outline-[#5d81b8] focus-visible:outline-offset-4"
        aria-label="Cliquer pour continuer"
      >
        <img 
          src={mouseIcon.src} 
          alt="Mouse click" 
          class="w-14 h-14 mouse-icon-white"
        />
      </button>
      
      <span class="text-[clamp(1rem,min(2.5vw,3.5vh),2.5rem)] font-semibold uppercase text-white press-text-blink">to continue</span>
    </div>
  </div>
</div>

<style>
  .homeboarding-overlay {
    font-family: 'Raleway', sans-serif;
    letter-spacing: 0.02em;
  }

  /* Animation d'apparition du contenu */
  .homeboarding-content.show {
    animation: content-fade-in 1400ms ease-out forwards;
  }

  @keyframes content-fade-in {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation de clignotement pour le texte Press */
  .press-text-blink {
    animation: press-blink 3s ease-in-out infinite;
  }

  @keyframes press-blink {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }

  /* Inverser les couleurs de l'icône souris pour la rendre blanche */
  .mouse-icon-white {
    filter: invert(1) brightness(2);
  }


</style>
