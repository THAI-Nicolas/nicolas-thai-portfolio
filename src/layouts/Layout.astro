---
import "../styles/global.css";
import FontLoader from "../components/FontLoader.astro";

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: string;
  canonical?: string;
}

const {
  title = "Nicolas THAI - Portfolio",
  description = "Portfolio de Nicolas THAI - Développeur Web",
  keywords = "développeur web, portfolio, React, Astro, TypeScript, TailwindCSS, Three.js, front-end",
  ogImage = "/og-image.jpg",
  ogType = "website",
  canonical,
} = Astro.props;

// Construire l'URL canonique
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).href;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Nicolas THAI" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph (Facebook, LinkedIn) -->
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site).href} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="Nicolas THAI Portfolio" />
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site).href} />
    
    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />

    <!-- Chargement des polices Adobe Fonts -->
    <FontLoader />

    <!-- Initialisation du thème (inline pour éviter le flash) -->
    <script is:inline>
      const THEME_KEY = "portfolio-theme";
      const storedTheme = localStorage.getItem(THEME_KEY);
      const theme = storedTheme === "wii" ? storedTheme : "wii";
      document.documentElement.setAttribute("data-theme", theme);
    </script>
  </head>
  <body>
    <slot />

    <script is:inline>
      // Gestionnaire de thème global
      window.portfolioTheme = {
        current: localStorage.getItem("portfolio-theme") || "wii",

        setTheme: function (theme) {
          if (theme !== "wii") return;

          this.current = theme;
          localStorage.setItem("portfolio-theme", theme);
          document.documentElement.setAttribute("data-theme", theme);

          // Dispatch event
          window.dispatchEvent(
            new CustomEvent("themeChange", { detail: { theme } })
          );

          console.log("Thème changé:", theme);
        },

        getTheme: function () {
          return this.current;
        },
      };
    </script>
  </body>
</html>
