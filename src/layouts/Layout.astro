---
import "../styles/global.css";
import FontLoader from "../components/FontLoader.astro";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Nicolas THAI - Portfolio",
  description = "Portfolio de Nicolas THAI - Développeur Web",
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <title>{title}</title>

    <!-- Chargement des polices Adobe Fonts -->
    <FontLoader />

    <!-- Initialisation du thème (inline pour éviter le flash) -->
    <script is:inline>
      const THEME_KEY = "portfolio-theme";
      const storedTheme = localStorage.getItem(THEME_KEY);
      const theme =
        storedTheme === "dark" || storedTheme === "wii" ? storedTheme : "wii";
      document.documentElement.setAttribute("data-theme", theme);
    </script>
  </head>
  <body>
    <slot />

    <script is:inline>
      // Gestionnaire de thème global
      window.portfolioTheme = {
        current: localStorage.getItem("portfolio-theme") || "wii",

        setTheme: function (theme) {
          if (theme !== "wii" && theme !== "dark") return;

          this.current = theme;
          localStorage.setItem("portfolio-theme", theme);
          document.documentElement.setAttribute("data-theme", theme);

          // Dispatch event
          window.dispatchEvent(
            new CustomEvent("themeChange", { detail: { theme } })
          );

          console.log("Thème changé:", theme);
        },

        getTheme: function () {
          return this.current;
        },
      };
    </script>
  </body>
</html>
