---
import "../styles/global.css";
import FontLoader from "../components/FontLoader.astro";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Nicolas THAI - Portfolio",
  description = "Portfolio de Nicolas THAI - DÃ©veloppeur Web",
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <title>{title}</title>

    <!-- Chargement des polices Adobe Fonts -->
    <FontLoader />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
