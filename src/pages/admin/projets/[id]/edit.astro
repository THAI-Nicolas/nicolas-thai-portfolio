import Layout from '../../../../layouts/Layout.astro';
import { pb } from '../../../../utils/pb';

// Restaurer l'auth depuis le cookie
const authCookie = Astro.cookies.get('pb_auth');
if (authCookie) {
  const authData = JSON.parse(authCookie.value);
  pb.authStore.save(authData.token, authData.model);
}

const projetId = Astro.params.id!;

// R√©cup√©rer le projet
const projet = await pb.collection('projets').getOne(projetId);

// R√©cup√©rer les technologies pour le formulaire
const technologies = await pb.collection('technologies').getFullList({
  sort: 'nom',
});

const skipPost = true;
if (false) {
  try {
    const formData = await Astro.request.formData();
    
    // G√©n√©rer le slug √† partir du titre
    const titre = formData.get('titre')?.toString() || '';
    const slug = titre
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/(^-|-$)/g, '');
    
    // Pr√©parer les donn√©es
    const projetData: any = {
      slug,
      titre: formData.get('titre'),
      annee: formData.get('annee'),
      description: formData.get('description'),
      contexte: formData.get('contexte'),
      client: formData.get('client'),
      cadre: formData.get('cadre'),
      temps: formData.get('temps'),
      mode: formData.get('mode'),
      color_from: formData.get('color_from'),
      color_to: formData.get('color_to'),
      resultat_url: formData.get('resultat_url') || '',
      ordre: parseInt(formData.get('ordre')?.toString() || '0'),
      visible: formData.get('visible') === 'on',
      technologies: formData.getAll('technologies'),
    };

    // Mettre √† jour le projet
    await pb.collection('projets').update(projetId, projetData);
    
    // Upload des nouvelles images si pr√©sentes
    const coverImage = formData.get('cover_image') as File;
    const visuels = formData.getAll('visuels') as File[];
    
    if (coverImage && coverImage.size > 0) {
      const updateData = new FormData();
      updateData.append('cover_image', coverImage);
      await pb.collection('projets').update(projetId, updateData);
    }
    
    if (visuels.length > 0 && visuels[0].size > 0) {
      const updateData = new FormData();
      visuels.forEach(visuel => {
        if (visuel.size > 0) {
          updateData.append('visuels', visuel);
        }
      });
      await pb.collection('projets').update(projetId, updateData);
    }
    
    return Astro.redirect('/admin/projets');
    
  } catch (e: any) {
    console.error('Erreur mise √† jour projet:', e);
  }
}
