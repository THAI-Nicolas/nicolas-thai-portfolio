---
import Layout from "../layouts/Layout.astro";
import SmallBouton from "../components/boutons/SmallBouton.astro";
import MainBouton from "../components/boutons/MainBouton.astro";
import ChannelProjet from "../components/ui/ChannelProjet.astro";
import CardCV from "../components/boutons/CardCV.astro";
import Fleche from "../components/ui/Fleche.astro";
import FooterAccueil from "../components/layout/FooterAccueil.astro";
import FooterAccueilMobile from "../components/layout/FooterAccueilMobile.astro";
---

<Layout title="Accueil" description="Accueil du portfolio de Nicolas THAI">
  <!-- Version Desktop -->
  <div class="hidden md:block">
    <!-- Zone principale avec grille de channels -->
    <main class="relative h-screen bg-gray-100 overflow-hidden">
      <!-- Grille de channels -->
      <div class="absolute left-40 top-88 transform -translate-y-1/2">
        <div class="grid grid-cols-5 gap-x-[40px] gap-y-[10px]">
          <!-- Ligne 1 -->
          <ChannelProjet
            isEmpty={false}
            projectCover="/src/assets/images/asafram_cover.svg"
            projectTitle="ASAFRAM"
            size="desktop"
          />
          <ChannelProjet
            isEmpty={false}
            projectCover="/src/assets/images/rba_cover.svg"
            projectTitle="Réseau Biodiversité pour les Abeilles"
            size="desktop"
          />
          <ChannelProjet
            isEmpty={false}
            projectCover="/src/assets/images/mysubs_cover.svg"
            projectTitle="MySubs"
            size="desktop"
          />
          <ChannelProjet
            isEmpty={false}
            projectCover="/src/assets/images/mmi_soccer_cover.svg"
            projectTitle="MMI Soccer"
            size="desktop"
          />
          <ChannelProjet isEmpty={true} size="desktop" />

          <!-- Ligne 2 -->
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />

          <!-- Ligne 3 -->
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />
          <ChannelProjet isEmpty={true} size="desktop" />
        </div>
      </div>

      <!-- Flèche de navigation à droite -->
      <div class="absolute right-24 top-90 transform -translate-y-1/2 z-30">
        <Fleche direction="droite" size="desktop" />
      </div>
    </main>

    <!-- Footer Desktop -->
    <FooterAccueil />
  </div>

  <!-- Version Mobile -->
  <div class="block md:hidden">
    <!-- Footer mobile -->
    <FooterAccueilMobile />
  </div>
</Layout>
