---
import Layout from "../layouts/Layout.astro";
---

<Layout titre="Nicolas THAI - Portfolio">
  <div class="bg-white">
    <div class="relative isolate px-6 pt-2 px-8">
      <div
        class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl"
        aria-hidden="true"
      >
        <div
          class="relative left-[calc(50%-30rem)] aspect-1155/678 w-[72.1875rem] -translate-x-1/2 rotate-[30deg] bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
      </div>
      <div class="mx-auto max-w-2xl py-48">
        <div class="text-center">
          <h1
            class="text-7xl font-montserrat font-semibold tracking-tight text-balance text-gray-900 p-0"
          >
            Nicolas THAI
          </h1>
          <p
            class="mt-8 text-xl/8 font-raleway font-medium text-pretty text-gray-500"
          >
            Développeur Web Full Stack passionné par la création d'expériences
            numériques innovantes. Spécialisé en React, Node.js et technologies
            web modernes.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a
              href="#projets"
              class="rounded-md bg-black px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-white hover:text-black border border-black"
            >
              Voir mes projets
            </a>
            <a
              href="#about"
              class="text-sm/6 font-semibold text-gray-900 border border-black px-3 py-2 rounded-md hover:bg-black hover:text-white"
            >
              A propos de moi <span aria-hidden="true">→</span>
            </a>
          </div>
        </div>
      </div>
      <div
        class="absolute inset-x-0 top-[calc(100%-30rem)] -z-10 transform-gpu overflow-hidden blur-3xl"
        aria-hidden="true"
      >
        <div
          class="relative left-[calc(50%+36rem)] aspect-1155/678 w-[72.1875rem] -translate-x-1/2 bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
      </div>
    </div>
  </div>
</Layout>
